<div class="container">
    <div class="row">

        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseProject" aria-expanded="true" aria-controls="collapseOne">
                            Opprett nytt prosjekt
                        </a>
                    </h4>
                </div>

                <div id="collapseProject" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">

                        <div class="form-horizontal">

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label>Kunde</label>
                                    <input type="text" class="form-control update-txt" id="project-customer">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label>Prosjekt Navn</label>
                                    <input type="text" class="form-control update-txt" id="project-name">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label>Beskrivelse</label>
                                    <input type="text" class="form-control update-txt" id="project-description">
                                </div>
                            </div>

                            <div class="form-group col-lg-2">
                                <div class="input-group">
                                    <span class="input-group-addon">Fra</span>
                                    <select id="education-select-from" class="form-control">
                                        @for (var i = 0; i < 70; i++)
                                        {
                                            <option>@(@DateTime.Now.Year - i)</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group col-lg-2">
                                <div class="input-group">
                                    <span class="input-group-addon">Til</span>
                                    <select id="education-select-to" class="form-control">
                                        @for (var i = 0; i < 70; i++)
                                        {
                                            <option>@(@DateTime.Now.Year - i)</option>
                                        }
                                    </select>
                                </div>
                            </div>   
                       
                            <div class="form-group col-lg-2">
                                <div class="col-lg-12">
                                    <button id="new-project-btn" type="button" class="btn btn-success">Opprett prosjekt</button>
                                </div>
                            </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
