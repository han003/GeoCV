<div id="rediger-utdannelse-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Rediger</h4>
            </div>
            <div class="modal-body">

                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Studiested</label>
                        <div class="col-lg-10">
                            <input id="rediger-studiested" type="text" class="form-control col-lg-10">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Beskrivelse</label>
                        <div class="col-lg-10">
                            <input id="rediger-beskrivelse" type="text" class="form-control col-lg-10">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Fra</label>
                        <div class="col-lg-10">

                            <select id="rediger-fra" class="form-control select-oppdaterings-input">
                                @for (var i = 0; i <= 100; i++)
                                {
                                    <option>@(DateTime.Now.Year - i)</option>
                                }
                            </select>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Til</label>
                        <div class="col-lg-10">

                            <select id="rediger-til" class="form-control select-oppdaterings-input">
                                @for (var i = 0; i <= 100; i++)
                                {
                                    <option>@(DateTime.Now.Year - i)</option>
                                }
                            </select>

                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Avbryt</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Lagre endringer</button>
            </div>
        </div>
    </div>
</div>
