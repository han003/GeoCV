@using System.Web.Optimization

@model GeoCV.Models.EditProjectModel

@{
    ViewBag.Title = "Rediger " + Model.Prosjekt.Navn;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/editproject")
}
@section scripts{
    @Scripts.Render("~/bundles/js/editproject")
}

<!-- Slett modal -->
<div class="modal fade" id="slettModal" tabindex="-1" role="dialog" aria-labelledby="slettModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="slettModalLabel">Slett</h4>
            </div>
            <div class="modal-body">
                Er du sikker på at du vil slette <code id="profil-slett-etikett"></code> profilen?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Nei (Esc)</button>
                <button id="slett-profil-btn" type="button" class="btn btn-primary">Ja</button>
                <i class="fa fa-spinner fa-spin fa-2x hidden"></i>
            </div>
        </div>
    </div>
</div>

<!-- Endre modal -->
<div class="modal fade" id="endreModal" tabindex="-1" role="dialog" aria-labelledby="endreModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="endreModalLabel">Endre</h4>
            </div>
            <div class="modal-body">
                <input id="endre-txt" type="text" class="form-control" autocomplete="off">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Avslutt (Esc)</button>
                <button id="endre-profil-btn" type="button" class="btn btn-primary">Endre (Enter)</button>
                <i class="fa fa-spinner fa-spin fa-2x hidden"></i>
            </div>
        </div>
    </div>
</div>

<div role="tabpanel">

    <!-- Nav tabs -->
    <ul id="edit-pro-tabs" class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#rediger-prosjekt" aria-controls="rediger-prosjekt" role="tab" data-toggle="tab">Rediger prosjekt</a></li>
        <li role="presentation"><a href="#tekniske-profiler" aria-controls="tekniske-profiler" role="tab" data-toggle="tab">Tekniske profiler</a></li>
        <li role="presentation"><a href="#ny-teknisk-profil" aria-controls="ny-teknisk-profil" role="tab" data-toggle="tab">Ny teknisk profil</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="rediger-prosjekt">
            <div class="form-horizontal">

                <div class="form-group">
                    <label for="@Html.DisplayNameFor(m => Model.Prosjekt.Navn)-txt" class="col-lg-2 control-label">Navn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control update-txt" value="@Model.Prosjekt.Navn" id="@Html.DisplayNameFor(m => Model.Prosjekt.Navn)-txt" autocomplete="off">
                    </div>
                </div>

                <div class="form-group">
                    <label for="@Html.DisplayNameFor(m => Model.Prosjekt.Kunde)-txt" class="col-lg-2 control-label">Kunde</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control update-txt" value="@Model.Prosjekt.Kunde" id="@Html.DisplayNameFor(m => Model.Prosjekt.Kunde)-txt" autocomplete="off">
                    </div>
                </div>

                <div class="form-group">
                    <label for="@Html.DisplayNameFor(m => Model.Prosjekt.Beskrivelse)-txt" class="col-lg-2 control-label">Beskrivelse</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control update-txt" value="@Model.Prosjekt.Beskrivelse" id="@Html.DisplayNameFor(m => Model.Prosjekt.Beskrivelse)-txt" autocomplete="off">
                    </div>
                </div>

            </div>
        </div>





        <div role="tabpanel" class="tab-pane" id="tekniske-profiler">

            <div id="filter-row" class="row col-lg-12">
                <div class="col-lg-6">
                    <input id="alle-elementer-filter" type="text" class="form-control table-filter" placeholder="Filter" autocomplete="off">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="col-lg-12">
                        <table id="alle-elementer-tabell" class="table element-table">
                            <thead>
                                <tr>
                                    <th data-sort="string" class="col-lg-3">Element <i class="fa pull-right hidden"></i></th>
                                    <th data-sort="string" class="col-lg-2">Katalog <i class="fa pull-right hidden"></i></th>
                                    <th class="col-lg-1"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var Element in Model.KatalogElementer)
                                {
                                    <tr id="@Element.ListeKatalogId">
                                        <td class="col-lg-2">@Element.Element</td>
                                        <td class="col-lg-3">@Element.Katalog</td>
                                        <td class="col-lg-1"><i class="fa fa-plus-square fa-lg add-item-btn"></i></td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>

                <div class="col-lg-6">


                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

                        <!-- Legg til paneler -->
                        <div id="trenger-profil-warning" class="alert alert-warning hidden" role="alert"><i class="fa fa-exclamation-triangle"></i> Opprett en teknisk profil <a>her</a> for å legge til elementer</div>

                        @foreach(var TekniskProfil in Model.TekniskeProfiler)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="@TekniskProfil.Navn-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" aria-expanded="false" aria-controls="@TekniskProfil.Navn-collapse">
                                            @TekniskProfil.Navn <i class="fa fa-trash-o pull-right"></i><i class="fa fa-pencil-square-o pull-right"></i>
                                        </a>
                                    </h4>
                                </div>
                                <div id="@TekniskProfil.TekniskProfilId-collapse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@TekniskProfil.Navn-heading">
                                    <div class="panel-body">
                                        <table id="@TekniskProfil.TekniskProfilId-profil-table" class="table profil-tabell">
                                            <thead>
                                                <tr>
                                                    <th class="col-lg-3">Element</th>
                                                    <th class="col-lg-2">Katalog</th>
                                                    <th class="col-lg-1"></th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var TekniskElementId in TekniskProfil.Elementer.Split(';'))
                                                {
                                                    foreach (var KatalogElement in Model.KatalogElementer)
                                                    {
                                                        if (KatalogElement.ListeKatalogId.ToString().Equals(TekniskElementId))
                                                        {
                                                            <tr id="@TekniskElementId">
                                                                <td class="col-lg-3">@KatalogElement.Element</td>
                                                                <td class="col-lg-2">@KatalogElement.Katalog</td>
                                                                <td class="col-lg-1"><i class="fa fa-minus-square fa-lg remove-item-btn"></i></td>
                                                            </tr>
                                                        }
                                                    }
                                                }

                                            </tbody>







                                        </table>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>



        <div role="tabpanel" class="tab-pane" id="ny-teknisk-profil">
            <div id="tech-form" class="form-horizontal">

                <div class="form-group">
                    <label for="ny-profil-navn-txt" class="col-lg-2 control-label">Navn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" id="ny-profil-navn-txt" autocomplete="off">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-8 col-lg-offset-2">
                        <button id="ny-profil-lagre-btn" type="button" class="btn btn-success" tabindex="-1">Legg til</button>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>













