@using System.Web.Optimization

@model GeoCV.Models.Prosjekt

@{
    ViewBag.Title = "Rediger Prosjekt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/editproject")
}
@section scripts{
    @Scripts.Render("~/bundles/js/editproject")
}


<div class="container">
    <div class="row">
        <div class="col-lg-6">

            <h2 class="title" id="@Model.ProsjektId">Rediger Prosjekt</h2>
            <hr />

            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-lg-12">
                        <label>Navn</label>
                        <input type="text" class="form-control update-txt" value="@Model.Navn" id="@Html.DisplayNameFor(m => Model.Navn)-txt">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-12">
                        <label>Kunde</label>
                        <input type="text" class="form-control update-txt" value="@Model.Kunde" id="@Html.DisplayNameFor(m => Model.Kunde)-txt">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-12">
                        <label>Beskrivelse</label>
                        <input type="text" class="form-control update-txt" value="@Model.Beskrivelse" id="@Html.DisplayNameFor(m => Model.Beskrivelse)-txt">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-12">
                        <label>Fra</label>
                        <select class="form-control">
                            <option>Placeholder</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-12">
                        <label>Til</label>
                        <select class="form-control">
                            <option>Placeholder</option>
                        </select>
                    </div>
                </div>

            </div>

        </div>
        
        <div class="col-lg-6">

            <h2>Teknsike Profiler</h2>
            <hr />

        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">

            <h2>Medlemmer</h2>
            <hr />

            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <td>
                            <strong>Navn</strong>
                        </td>
                        <td>
                            <strong>Rolle</strong>
                        </td>
                        <td>
                            <strong>Start</strong>
                        </td>
                        <td>
                            <strong>Slutt</strong>
                        </td>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var Item in Model.Medlem)
                    {
                        <tr>
                            <td>@Item.Person.Fornavn @Item.Person.Etternavn</td>
                            <td>@Item.Rolle</td>
                            <td>@Item.Start</td>
                            <td>@Item.Slutt</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        
    </div>
</div>


