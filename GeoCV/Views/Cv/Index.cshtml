<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Legg til</h4>
            </div>
            <div id="modalAddText" class="modal-body">

            </div>
            <div class="modal-footer">
                <button id="modalDontAddItem" type="button" class="btn btn-default" data-dismiss="modal">Ikke legg til</button>
                <button id="modalAddItem" type="button" class="btn btn-success">Legg til</button>
            </div>
        </div>
    </div>
</div>

<div class="row text-center">
    <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-success cv-nav-btn">Personlig informasjon</button>
        <button type="button" class="btn btn-default cv-nav-btn">Nøkkelkompetanse</button>
        <button type="button" class="btn btn-default cv-nav-btn">Utdannelse</button>
        <button type="button" class="btn btn-default cv-nav-btn">Arbeidserfaring</button>
        <button type="button" class="btn btn-default cv-nav-btn">Prosjekter</button>
    </div>

    <div class="btn-group col-lg-offset-1">
        <button type="button" id="download-button" class="btn btn-success">@Html.ActionLink("Last ned PDF", "Pdf", "Download", null, new { @id = "download-link" })</button>
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a>PDF</a></li>
            <li><a>Word</a></li>
        </ul>
    </div>
</div>

<hr />

<div id="personal-info-panel" class="row cv-div cv-current">
