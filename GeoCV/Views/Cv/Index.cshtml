                        <div class="col-lg-12">
                            <label>Fornavn</label>
                            <input type="text" class="form-control update-txt" value="@Model.Person.Fornavn" id="@Html.DisplayNameFor(m => Model.Person.Fornavn)-txt" placeholder="Fornavn">
