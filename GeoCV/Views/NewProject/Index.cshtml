@using System.Web.Optimization

@{
    ViewBag.Title = "Nytt Prosjekt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/newproject")
}
@section scripts{
    @Scripts.Render("~/bundles/js/newproject")
}

<div class="container">
    <div class="row">

            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">Nytt Prosjekt</h4>
                </div>

                    <div class="panel-body">

                        <div class="form-horizontal">

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label>Kunde</label>
                                    <input type="text" class="form-control update-txt" id="project-customer">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label>Prosjekt Navn</label>
                                    <input type="text" class="form-control update-txt" id="project-name">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label>Beskrivelse</label>
                                    <input type="text" class="form-control update-txt" id="project-description">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <button id="new-project-btn" type="button" class="btn btn-primary">Opprett prosjekt</button>
                                </div>
                            </div>
                            
                            <div class="form-group hidden">
                                <div id="new-project-link" class="col-lg-12">
                                </div>
                            </div>
                            
                        </div>

                    </div>
            </div>

    </div>
</div>


