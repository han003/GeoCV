@using System.Web.Optimization
@using Microsoft.AspNet.Identity

@model GeoCV.Models.CVVersjon

@{
    ViewBag.Title = "Prosjekter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/Bundles/css/myprojects")
}
@section scripts{
    @Scripts.Render("~/Bundles/js/myprojects")
}

<div class="row">
    <div class="col-lg-12">


        <div role="tabpanel">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#my-projects" aria-controls="my-projects" role="tab" data-toggle="tab">Mine Prosjekter</a></li>
                <li role="presentation"><a href="#new-project" aria-controls="new-project" role="tab" data-toggle="tab">Legg Til Prosjekt</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="my-projects">

                    @{
                        var number = 0;

                        foreach (var Value in Model.Person.Medlem)
                        {
                            if (number > 0)
                            {
                                <hr />
                            }
                            <h2>@Value.Start - @Value.Slutt</h2>
                            <h4>@Value.Prosjekt.Navn - @Value.Rolle</h4>
                            <h4>@Value.Prosjekt.Beskrivelse</h4>

                            number++;
                        }
                    }

                </div>


                <div role="tabpanel" class="tab-pane" id="new-project">

                    <h3 id="project-load">Laster inn <i class="fa fa-spinner fa-pulse"></i></h3>

                    <div id="project-form" class="form-horizontal hidden">

                        <div class="form-group">
                            <div class="col-lg-12">
                                <label>Prosjekt</label>
                                <input id="project-auto" type="text" class="form-control add-item-auto typeahead" placeholder="Søk etter prosjekt" data-provide="typeahead" autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <label>Rolle</label>
                                <select id="project-role-select" class="form-control">
                                    <option>Utvikler</option>
                                    <option>Test Rolle 1</option>
                                    <option>Test Rolle 2</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <label>Fra</label>
                                <input id="from-date" class="form-control update-txt" type="date">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <label>Til</label>
                                <input id="to-date" class="form-control update-txt" type="date">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <button id="project-add-btn" class="btn btn-success" type="button">Legg til prosjekt</button>
                            </div>
                        </div>

                    </div>


                </div>
            </div>

        </div>


    </div>
</div>





