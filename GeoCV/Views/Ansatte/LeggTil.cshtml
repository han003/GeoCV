@using System.Web.Optimization
@using Microsoft.AspNet.Identity
@using GeoCV.Models

@{
    ViewBag.Title = "Ny ansatt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/employees")
}
@section scripts{
    @Scripts.Render("~/bundles/js/employees")
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Legg til ny ansatt</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-8">
            <div class="form-horizontal">

                <div class="form-group">
                    <label for="Fornavn-txt" class="col-lg-2 control-label">Fornavn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control col-lg-8" id="Fornavn-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Etternavn-txt" class="col-lg-2 control-label">Etternavn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control col-lg-8" id="Etternavn-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Epost-txt" class="col-lg-2 control-label">Epost</label>
                    <div class="col-lg-8">
                        <input type="email" class="form-control col-lg-8" id="Epost-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Passord-txt" class="col-lg-2 control-label">Passord</label>
                    <div class="col-lg-8">
                        <input type="password" class="form-control col-lg-8" id="Passord-txt" data-container="body" data-toggle="popover" data-placement="right" data-content="test">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Gjenta-Passord-txt" class="col-lg-2 control-label">Gjenta passord</label>
                    <div class="col-lg-8">
                        <input type="password" class="form-control col-lg-8" id="Gjenta-Passord-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Rolle-select" class="col-lg-2 control-label">Rolle</label>
                    <div class="col-lg-8">
                        <select id="Rolle-select" class="form-control">
                            <option>Admin</option>
                            <option selected>Bruker</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-8 col-lg-offset-2">
                        <button id="ny-ansatt-btn" class="btn btn-success" type="button">Legg til</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
