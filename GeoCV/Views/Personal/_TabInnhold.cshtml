@model GeoCV.Models.PersonalModel

<div id="filter-row" class="row col-lg-12">
    <div class="col-lg-6">
        <input id="@Model.Språk.FirstOrDefault().Katalog-filter" type="text" class="form-control table-filter" placeholder="Filter" autocomplete="off">
    </div>
</div>

<div class="row">

    <div class="col-lg-6">
        <div class="col-lg-12">
            <table id="@Model.Språk.FirstOrDefault().Katalog-alle-tabell" class="table element-table">
                <thead>
                    <tr>
                        <th>Alle @Model.Språk.FirstOrDefault().Katalog</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var Språk in Model.Språk)
                    {
                        <tr id="@Språk.ListeKatalogId">
                            <td class="col-lg-5">@Språk.Element</td>
                            <td class="col-lg-1"><i class="fa fa-plus-square fa-lg add-item-btn"></i></td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="col-lg-12">
            <table id="@Model.Språk.FirstOrDefault().Katalog-bruker-tabell" class="table bruker-table">
                <thead>
                    <tr>
                        <th>Mine @Model.Språk.FirstOrDefault().Katalog</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var BrukerSpråk in Model.BrukerSpråk)
                    {
                        <tr id="@BrukerSpråk.ListeKatalogId">
                            <td class="col-lg-5">@BrukerSpråk.Element</td>
                            <td class="col-lg-1"><i class="fa fa-minus-square fa-lg remove-item-btn"></i></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>

