@using System.Web.Optimization
@using Microsoft.AspNet.Identity

@model GeoCV.Models.CVVersjon

@{
    ViewBag.Title = "Personlig Informasjon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/Bundles/css/personal")
}
@section scripts{
    @Scripts.Render("~/Bundles/js/personal")
}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Legg til</h4>
            </div>
            <div id="modalAddText" class="modal-body">

            </div>
            <div class="modal-footer">
                <button id="modalDontAddItem" type="button" class="btn btn-default" data-dismiss="modal">Nei</button>
                <button id="modalAddItem" type="button" class="btn btn-success">OK</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <div role="tabpanel">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#personal-info-tab" aria-controls="personal-info-tab" role="tab" data-toggle="tab">Personlig Informasjon</a></li>
                <li role="presentation"><a href="#language-tab" aria-controls="language-tab" role="tab" data-toggle="tab">Språk</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="personal-info-tab">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label><font size="+1" color="black">Fornavn</label></font>
                                        <input type="text" class="form-control update-txt" value="@Model.Person.Fornavn" id="@Html.DisplayNameFor(m => Model.Person.Fornavn)-txt">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label><font size="+1" color="black">Mellomnavn</label></font>
                                        <input type="text" class="form-control update-txt" value="@Model.Person.Mellomnavn" id="@Html.DisplayNameFor(m => Model.Person.Mellomnavn)-txt">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label><font size="+1" color="black">Etternavn</label></font>
                                        <input type="text" class="form-control update-txt" value="@Model.Person.Etternavn" id="@Html.DisplayNameFor(m => Model.Person.Etternavn)-txt">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label><font size="+1" color="black">Nasjonalitet</label></font>
                                        <select class="form-control bfh-countries" data-country="NO"></select>
                                   <!--     <input type="text" class="form-control update-txt" value="@Model.Person.Nasjonalitet" id="@Html.DisplayNameFor(m => Model.Person.Nasjonalitet)-txt">   -->
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label><font size="+1" color="black">Fødselsår</label></font>
                                        <input type="text" class="form-control update-txt" value="@Model.Person.Fødselsår" id="@Html.DisplayNameFor(m => Model.Person.Fødselsår)-txt">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label><font size="+1" color="black">Stilling</label></font>
                                        <input type="text" class="form-control update-txt" value="@Model.Person.Stilling" id="@Html.DisplayNameFor(m => Model.Person.Stilling)-txt">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label><font size="+1" color="black">År erfaring</label></font>
                                        <input type="text" class="form-control update-txt" value="@Model.Person.ÅrErfaring" id="@Html.DisplayNameFor(m => Model.Person.ÅrErfaring)-txt">
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>


                <div role="tabpanel" class="tab-pane" id="language-tab">

                    <div class="row">
                        <div class="col-lg-12">
                            <h3 id="Språk-load">Laster inn <i class="fa fa-spinner fa-pulse"></i></h3>

                            <div id="Språk-form" class="form-horizontal hidden">

                                <div class="form-group">
                                    <div class="col-lg-10">
                                        <input id="@Html.DisplayNameFor(m => Model.Person.Språk)-auto" type="text" class="form-control add-item-auto typeahead" placeholder="Legg til et nytt språk" data-provide="typeahead" autocomplete="off">
                                    </div>
                                    <div class="col-lg-1">
                                        <button id="@Html.DisplayNameFor(m => Model.Person.Språk)-btn" type="button" class="btn btn-success add-item-btn" tabindex="-1">Legg til</button>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div id="@Html.DisplayNameFor(m => Model.Person.Språk)-group" class="col-lg-12 added-btn-group">
                                        @if (!string.IsNullOrEmpty(Model.Person.Språk))
                                        {
                                            foreach (var value in Model.Person.Språk.Split(';'))
                                            {
                                                <button type="button" class="btn btn-info added-btn" tabindex="-1">@value</button>
                                            }

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
