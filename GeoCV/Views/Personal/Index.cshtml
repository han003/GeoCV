@using System.Web.Optimization
@using Microsoft.AspNet.Identity

@model GeoCV.Models.CVVersjon

@{
    ViewBag.Title = "Personlig Informasjon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/Bundles/css/personal")
}
@section scripts{
    @Scripts.Render("~/Bundles/js/personal")
}

<div role="tabpanel">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#personal-info-tab" aria-controls="personal-info-tab" role="tab" data-toggle="tab">Personlig Informasjon</a></li>
        <li role="presentation"><a href="#language-tab" aria-controls="language-tab" role="tab" data-toggle="tab">Språk</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="personal-info-tab">

            <div class="form-horizontal">

                <div class="form-group">
                    <label for="@Html.DisplayNameFor(m => Model.Person.Fornavn)-txt" class="col-lg-2 control-label">Fornavn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control update-txt col-lg-8" value="@Model.Person.Fornavn" id="@Html.DisplayNameFor(m => Model.Person.Fornavn)-txt">
                    </div>
                    <div id="@Html.DisplayNameFor(m => Model.Person.Fornavn)-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="@Html.DisplayNameFor(m => Model.Person.Mellomnavn)-txt" class="col-lg-2 control-label">Mellomnavn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control update-txt col-lg-8" value="@Model.Person.Mellomnavn" id="@Html.DisplayNameFor(m => Model.Person.Mellomnavn)-txt">
                    </div>
                    <div id="@Html.DisplayNameFor(m => Model.Person.Mellomnavn)-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="@Html.DisplayNameFor(m => Model.Person.Etternavn)-txt" class="col-lg-2 control-label">Etternavn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control update-txt col-lg-8" value="@Model.Person.Etternavn" id="@Html.DisplayNameFor(m => Model.Person.Etternavn)-txt">
                    </div>
                    <div id="@Html.DisplayNameFor(m => Model.Person.Etternavn)-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="nasjonalitet-select" class="col-lg-2 control-label">Nasjonalitet</label>
                    <div class="col-lg-8">
                        <select id="nasjonalitet-select" class="form-control">
                            <option id="nasjonalitet-load">Henter nasjonaliteter.. <i class="fa fa-spinner fa-pulse"></i></option>
                        </select>
                    </div>
                    <div id="Nasjonalitet-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="birthday-date" class="col-lg-2 control-label">Fødselsår</label>
                    <div class="col-lg-8">
                        <input id="birthday-date" class="form-control" type="text">
                    </div>
                    <div id="Fødselsår-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="stillinger-select" class="col-lg-2 control-label">Stilling</label>
                    <div class="col-lg-8">
                        <select id="stillinger-select" class="form-control">
                            <option id="stilling-load">Henter stillinger.. <i class="fa fa-spinner fa-pulse"></i></option>
                        </select>
                    </div>
                    <div id="Stilling-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="@Html.DisplayNameFor(m => Model.Person.ÅrErfaring)-txt" class="col-lg-2 control-label">År erfaring før Geomatikk</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control update-txt col-lg-8" value="@Model.Person.ÅrErfaring" id="@Html.DisplayNameFor(m => Model.Person.ÅrErfaring)-txt">
                    </div>
                    <div id="ÅrErfaring-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="geomatikk-start-date" class="col-lg-2 control-label">Startdato i Geomatikk</label>
                    <div class="col-lg-8">
                        <input id="geomatikk-start-date" class="form-control" type="text">
                    </div>
                    <div id="StartDato-label" class="col-lg-2 update-label hidden">
                        <span class="label label-warning">Oppdaterer <i class="fa fa-spinner fa-pulse"></i></span>
                    </div>
                </div>
            </div>
        </div>


        <div role="tabpanel" class="tab-pane" id="language-tab">

            <div class="row">
                <div class="col-lg-12">
                    <h4 id="Språk-load">Laster inn <i class="fa fa-spinner fa-pulse"></i></h4>

                    <div id="Språk-form" class="form-horizontal hidden">

                        <div class="form-group">
                            <div class="col-lg-10">
                                <input id="@Html.DisplayNameFor(m => Model.Person.Språk)-auto" type="text" class="form-control add-item-auto typeahead" placeholder="Legg til et nytt språk" data-provide="typeahead" autocomplete="off">
                            </div>
                            <div class="col-lg-1">
                                <button id="@Html.DisplayNameFor(m => Model.Person.Språk)-btn" type="button" class="btn btn-success add-item-btn" tabindex="-1">Legg til</button>
                            </div>
                        </div>

                        <div class="form-group">
                            <div id="@Html.DisplayNameFor(m => Model.Person.Språk)-group" class="col-lg-12 added-btn-group">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>