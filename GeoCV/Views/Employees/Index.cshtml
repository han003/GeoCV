@using System.Web.Optimization
@using Microsoft.AspNet.Identity
@using GeoCV.Models

@model IEnumerable<GeoCV.Models.CVVersjon>

@{
    ViewBag.Title = "Ansatte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/employees")
}
@section scripts{
    @Scripts.Render("~/bundles/js/employees")
}

<div role="tabpanel">

    <!-- Nav tabs -->
    <ul id="ansatte-tabs" class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#ansatte" aria-controls="ansatte" role="tab" data-toggle="tab">Ansatte</a></li>
        <li role="presentation"><a href="#ny-ansatt" aria-controls="ny-ansatt" role="tab" data-toggle="tab">Ny ansatt</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="ansatte">

            <table id="ansatt-tabell" class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th data-sort="string">Fornavn <i class="fa pull-right hidden"></i></th>
                        <th data-sort="string">Etternavn <i class="fa pull-right hidden"></i></th>
                        <th>Status</th>
                        <th>Rediger</th>
                        <th>CV</th>
                        <th>Slett</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var Ansatt in Model)
                    {
                        <tr>
                            <td class="col-lg-3">@Ansatt.Person.Fornavn</td>
                            <td class="col-lg-3">@Ansatt.Person.Etternavn</td>
                            @if (Ansatt.Aktiv)
                            {
                                <td class="col-lg-2">Aktiv (<a class="deactivate-link" data-id="@Ansatt.CVVersjonId">Deaktiver</a>)</td>
                            }
                            else
                            {
                                <td class="col-lg-2">Ikke Aktiv (<a class="activate-link" data-id="@Ansatt.CVVersjonId">Aktiver</a>)</td>
                            }
                            <td class="col-lg-2">@Html.ActionLink("Rediger bruker", "EndreBruker", "Employees", new { Id = Ansatt.CVVersjonId }, null)</td>
                            <td class="col-lg-1">@Html.ActionLink("Last ned", "LastNed", "Pdf", new { Id = Ansatt.CVVersjonId }, null)</td>
                            <td class="col-lg-1">@Html.ActionLink("Slett", "SlettBruker", "Employees", new { Id = Ansatt.CVVersjonId }, null)</td>
                        </tr>
                    }

                    

                </tbody>


            </table>



        </div>

        <div role="tabpanel" class="tab-pane" id="ny-ansatt">

            <div class="form-horizontal">

                <div class="form-group">
                    <label for="Fornavn-txt" class="col-lg-2 control-label">Fornavn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control col-lg-8" id="Fornavn-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Etternavn-txt" class="col-lg-2 control-label">Etternavn</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control col-lg-8" id="Etternavn-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Epost-txt" class="col-lg-2 control-label">Epost</label>
                    <div class="col-lg-8">
                        <input type="email" class="form-control col-lg-8" id="Epost-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Passord-txt" class="col-lg-2 control-label">Passord</label>
                    <div class="col-lg-8">
                        <input type="password" class="form-control col-lg-8" id="Passord-txt" data-container="body" data-toggle="popover" data-placement="right" data-content="test">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Gjenta-Passord-txt" class="col-lg-2 control-label">Gjenta passord</label>
                    <div class="col-lg-8">
                        <input type="password" class="form-control col-lg-8" id="Gjenta-Passord-txt">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Rolle-select" class="col-lg-2 control-label">Rolle</label>
                    <div class="col-lg-8">
                        <select id="Rolle-select" class="form-control">
                            <option>Admin</option>
                            <option selected>Bruker</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-8 col-lg-offset-2">
                        <button id="ny-ansatt-btn" class="btn btn-success" type="button">Legg til</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
