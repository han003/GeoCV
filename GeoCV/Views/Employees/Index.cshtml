@using System.Web.Optimization
@using Microsoft.AspNet.Identity
@using GeoCV.Models

@model IEnumerable<CVVersjon>

@{
    ViewBag.Title = "Ansatte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/employees")
}
@section scripts{
    @Scripts.Render("~/bundles/js/employees")
}

<div class="container">
    <div class="row">

        <div>
            <h5>dev note: Skal bli mulig å trykke på en ansatt for å redigere senere, samt fungerende søk</h5>
        </div>
        <hr />

        <div class="form-group">
            <input type="text" class="form-control" id="search-employee" placeholder="Søk etter ansatt">
        </div>

        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <td>
                        <strong>Fornavn</strong>
                    </td>
                    <td>
                        <strong>Etternavn</strong>
                    </td>
                    <td>
                        <strong>Rolle</strong>
                    </td>
                </tr>
            </thead>

            <tbody>

                @foreach (var Item in Model)
                {
                    <tr>
                        <td>@Item.Person.Fornavn</td>
                        <td>@Item.Person.Etternavn</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
