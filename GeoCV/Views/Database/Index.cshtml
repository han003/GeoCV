@using System.Web.Optimization

@model IEnumerable<GeoCV.Models.ListeKatalog>

@{
    ViewBag.Title = "Database";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/database")
}
@section scripts{
    @Scripts.Render("~/bundles/js/database")
}

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Rediger</h4>
            </div>
            <div id="EditModalAddText" class="modal-body">

                <h4 id="editLoader">Jobber <i class="fa fa-spinner fa-pulse"></i></h4>
                <input id="edit-txt" type="text" class="form-control" autocomplete="off">

            </div>
            <div class="modal-footer">
                <button id="editmodalDontAddItem" type="button" class="btn btn-default" data-dismiss="modal">Avslutt (Esc)</button>
                <button id="editmodalAddItem" type="button" class="btn btn-success">Endre (Enter)</button>
            </div>
        </div>
    </div>
</div>




<div class="row">
    <div class="col-lg-12">



        <div role="tabpanel">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#edit-elem-tab" aria-controls="edit-elem-tab" role="tab" data-toggle="tab">Rediger element</a></li>
                <li role="presentation"><a href="#add-elem-tab" aria-controls="add-elem-tab" role="tab" data-toggle="tab">Legg til element</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="edit-elem-tab">
                    <div class="row">
                        <div class="col-lg-6">

                            <table id="database-tabell" class="table table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th data-sort="string">Element <i class="fa pull-right hidden"></i></th>
                                        <th data-sort="string">Katalog <i class="fa pull-right hidden"></i></th>
                                        <th>Slett</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Oppføring in Model)
                                    {
                                        <tr id="@Oppføring.ListeKatalogId" data-katalog="@Oppføring.Katalog" data-element="@Oppføring.Element">
                                            <td class="element-td col-lg-5" data-id="@Oppføring.ListeKatalogId" data-element="@Oppføring.Element">@Oppføring.Element</td>
                                            <td class="katalog-td col-lg-5">@Oppføring.Katalog</td>
                                            <td><a data-id="@Oppføring.ListeKatalogId" class="del-link col-lg-2">Slett</a></td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                        </div>


                        <div class="col-lg-6">
                            <input id="filter-txt" type="text" class="form-control" placeholder="Filter" autocomplete="off">

                            <div id="btn-filter" class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input data-katalog="Programmeringsspråk" type="checkbox" autocomplete="off">Programmeringsspråk
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Rammeverk" type="checkbox" autocomplete="off">Rammeverk
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="WebTeknologier" type="checkbox" autocomplete="off">Web-teknologier
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Databasesystemer" type="checkbox" autocomplete="off">Databasesystemer
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Serverside" type="checkbox" autocomplete="off">Serverside
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Operativsystemer" type="checkbox" autocomplete="off">Operativsystemer
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Språk" type="checkbox" autocomplete="off">Språk
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Stillinger" type="checkbox" autocomplete="off">Stillinger
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Nasjonaliteter" type="checkbox" autocomplete="off">Nasjonaliteter
                                </label>
                                <label class="btn btn-primary">
                                    <input data-katalog="Annet" type="checkbox" autocomplete="off">Annet
                                </label>
                            </div>

                        </div>

                    </div>
                </div>

                <div role="tabpanel" class="tab-pane" id="add-elem-tab">
                    <div id="new-element-row" class="row">
                        <div class="col-lg-3">

                            <select id="katalog-select" class="form-control">
                                <option id="Programmeringsspråk">Programmeringsspråk</option>
                                <option id="Rammeverk">Rammeverk</option>
                                <option id="WebTeknologier">Web Teknologi</option>
                                <option id="Databasesystemer">Databasesystem</option>
                                <option id="Serverside">Serverside</option>
                                <option id="Operativsystemer">Operativsystem</option>
                                <option id="Språk">Språk</option>
                                <option id="Stillinger">Stilling</option>
                                <option id="Nasjonaliteter">Nasjonalitet</option>
                                <option id="Annet">Annet</option>
                            </select>

                        </div>
                        <div class="col-lg-7">

                            <input id="new-item-txt" type="text" class="form-control" autocomplete="off" placeholder="Nytt element">

                        </div>
                        <div class="col-lg-2">

                            <button id="add-item-btn" type="button" class="btn btn-primary">Legg til</button>

                        </div>
                    </div>

                    <div class="row">
                        <div id="new-element-loading" class="col-lg-12 hidden">

                            <h4>Legger til.. <i class="fa fa-spinner fa-pulse"></i></h4>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>