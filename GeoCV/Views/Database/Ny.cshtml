@using System.Web.Optimization

@model IEnumerable<GeoCV.Models.ListeKatalog>

@{
    ViewBag.Title = "Database legg til";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/bundles/css/database")
}
@section scripts{
    @Scripts.Render("~/bundles/js/database")
}

@Html.Partial("_RedigerModal")

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Legg til i database</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-3">

            <div class="panel panel-default katalog-panel">
                <div class="panel-heading"><i class="fa fa-folder"></i> Velg katalog</div>
                <div class="panel-body">

                    <ul class="list-group">
                        @{
                            int KatalogNr = 0;
                        }
                        @foreach (var Katalog in Model.Select(x => x.Katalog).Distinct())
                        {
                            if (KatalogNr.Equals(0))
                            {
                                <li class="list-group-item list-group-item-info">@Katalog</li>
                            }
                            else
                            {
                                <li class="list-group-item">@Katalog</li>
                            }

                            KatalogNr++;
                        }
                    </ul>
                </div>
            </div>

        </div>

        <div class="col-lg-5">
            <div class="panel panel-default nytt-element-panel">
                <div class="panel-heading"><i class="fa fa-plus-square"></i> Nytt element</div>
                <div class="panel-body">
                    <input id="new-item-txt" type="text" class="form-control" autocomplete="off" placeholder="Navn">
                    <button id="add-item-btn" type="button" class="btn btn-primary">Legg til</button>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel panel-default historikk-panel">
                <div class="panel-heading"><i class="fa fa-history"></i> Historikk</div>
                <div class="panel-body">
                    <div>Ingen nye elementer lagt til</div>
                    <div><span class="label label-info">Test</span> lagt til i <span class="label label-info">Databasesystemer</span> <span class="label label-danger">Angre</span></div>
                    <div><span class="label label-info">HTML5</span> lagt til i <span class="label label-info">Rammeverk</span> <span class="label label-danger">Angre</span></div>
                </div>
            </div>
        </div>

    </div>
</div>
