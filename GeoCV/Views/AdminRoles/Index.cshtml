@using System.Web.Optimization

@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Rolle Administrasjon";
}
@section css{
    @Styles.Render("~/bundles/css/adminroles")
}
@section scripts{
    @Scripts.Render("~/bundles/js/adminroles")
}

<div class="container">
    <div class="row">

        <div>
            <h5>dev note: mulighet for å opprette / slette roller for brukere, ikke testet så mye ennå, så kanskje ikke lurt å prøve denne funksjonen helt enda</h5>
        </div>
        <hr />

        <div class="col-lg-12">

            <div role="tabpanel">

                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#roles-list" aria-controls="roles-list" role="tab" data-toggle="tab">Roller</a></li>
                    <li role="presentation"><a href="#add-new-role" aria-controls="add-new-role" role="tab" data-toggle="tab">Ny Rolle</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="roles-list">

                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <td>
                                                <strong>Rolle</strong>
                                            </td>
                                            <td>
                                                <strong>Fjern</strong>
                                            </td>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        @foreach (var Role in Model)
                                        {
                                            <tr>
                                                <td>@Role.Name</td>
                                                <td class="remove"><a href="#">Fjern</a></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div>

                    <div role="tabpanel" class="tab-pane" id="add-new-role">

                        <div class="row">
                            <div class="col-lg-12">

                                <div class="form-horizontal">


                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <label>Rollenavn</label>
                                            <input type="text" class="form-control" id="new-role-txt">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <button class="btn btn-primary" id="new-role-btn">Legg Til</button>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                    </div>

                </div>

            </div>











        </div>
    </div>
</div>
