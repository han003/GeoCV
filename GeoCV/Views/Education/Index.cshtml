@using System.Web.Optimization
@using Microsoft.AspNet.Identity

@model GeoCV.Models.CVVersjon

@{
    ViewBag.Title = "Utdannelse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @Styles.Render("~/Bundles/css/education")
}
@section scripts{
    @Scripts.Render("~/Bundles/js/education")
}


<div class="row">
    <div class="col-lg-12">


        <div role="tabpanel">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#my-education-tab" aria-controls="my-education-tab" role="tab" data-toggle="tab">Min Utdannelse</a></li>
                <li role="presentation"><a href="#new-education-tab" aria-controls="new-education-tab" role="tab" data-toggle="tab">Legg Til Utdannelse</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">

                <div role="tabpanel" class="tab-pane active" id="my-education-tab">

                    @{
                        var number = 0;
                        
                        foreach (var Value in Model.Utdannelse)
                        {
                            if (number > 0)
                            {
                                <hr />
                            }
                            <h2>@Value.Fra - @Value.Til</h2>
                            <h4>@Value.Studiested</h4>
                            <h4>@Value.Beskrivelse</h4>

                            number++;
                        }
                    }

                </div>

                <div role="tabpanel" class="tab-pane" id="new-education-tab">

                    <div class="form-horizontal">

                        <div class="form-group">
                            <div class="col-lg-12">
                                <label>Studiested</label>
                                <input id="school-text" type="text" class="form-control" placeholder="Studiested" autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <label>Beskrivelse</label>
                                <input id="education-text" type="text" class="form-control" placeholder="Beskrivelse" autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group col-lg-2">
                            <div class="input-group">
                                <span class="input-group-addon">Fra</span>
                                <select id="education-select-from" class="form-control">
                                    @for (var i = 0; i <= 100; i++)
                                    {
                                        <option>@(@DateTime.Now.Year - i)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group col-lg-2">
                            <div class="input-group">
                                <span class="input-group-addon">Til</span>
                                <select id="education-select-to" class="form-control">
                                    @for (var i = 0; i <= 100; i++)
                                    {
                                        <option>@(@DateTime.Now.Year - i)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <button id="education-add-btn" class="btn btn-success" type="button">Legg til ny utdannelse</button>
                            </div>
                        </div>

                    </div>

                </div>


            </div>

        </div>


    </div>
</div>


